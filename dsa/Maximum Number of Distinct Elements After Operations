import java.util.Arrays;

public class Solution {
    public int maxDistinctElements(int[] nums, int k) {
        Arrays.sort(nums);
        long last = Long.MIN_VALUE / 4;
        int distinct = 0;

        for (int x : nums) {
            long low = (long)x - k;
            long high = (long)x + k;
            long candidate = Math.max(low, last + 1);

            if (candidate <= high) {
                distinct++;
                last = candidate;
            }
        }
        return distinct;
    }
}
